<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutBuildingContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/buildingListFragment"
        android:name="francois.tomasi.outerspacemanager.fragments.BuildingListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_building_list"/>

    <fragment
        android:id="@+id/buildingDetailFragment"
        android:name="francois.tomasi.outerspacemanager.fragments.BuildingDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        tools:layout="@layout/fragment_building_detail"/>

</LinearLayout>