<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/fragmentShipList"
        android:name="francois.tomasi.outerspacemanager.fragments.FragmentShipList"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        tools:layout="@layout/fragment_ship_list" />

    <fragment
        android:id="@+id/fragmentShipDetail"
        android:name="francois.tomasi.outerspacemanager.fragments.FragmentShipDetail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="6"
        tools:layout="@layout/fragment_ship_detail" />
</LinearLayout>

